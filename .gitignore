    private void btnUpdateUserActionPerformed(java.awt.event.ActionEvent evt) {                                              
        // TODO add your handling code here:
        if (currentUser != null && txtDateChooser != null) {
            currentUser.role = txtComboBoxRole.getSelectedItem().toString();
            currentUser.email = txtEmail.getText().trim();
            currentUser.name = txtName.getText().trim();
            currentUser.mobile = txtMobileNumber.getText().trim();
            currentUser.address = txtAddress.getText().trim();
            currentUser.dob = ((JTextField) txtDateChooser.getDateEditor().getUiComponent()).getText().trim();

            JOptionPane.showMessageDialog(this, "User updated successfully!");
        } else {
            JOptionPane.showMessageDialog(this, "Please search a user first!");
        }
    }                                             


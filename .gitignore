    private void jButton3ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        String username = txtUsername.getText().trim();
        currentUser = null;

        for (User u : users) {
            if (u.username.equalsIgnoreCase(username)) {
                currentUser = u;

                txtComboBoxRole.setSelectedItem(u.role);
                txtEmail.setText(u.email);
                txtName.setText(u.name);
                txtMobileNumber.setText(u.mobile);
                txtAddress.setText(u.address);
                txtDateChooser.setToolTipText(u.dob); // or use your DateChooser

                JOptionPane.showMessageDialog(this, "User found!");
                return;
            }
        }
        JOptionPane.showMessageDialog(this, "User not found!");
    }                                        

